body {
  background-color: #F2F2F2;
  font-size: 28rpx;
  color: #333333;
  font-family: Helvetica Neue, Helvetica, sans-serif;
}
.unicorn-page {
  margin-top: -4rpx;
  background-color: #F2F2F2;
}
.unicorn-body {
  padding: 0 20rpx;
}
.unicorn-card {
  border-radius: 10px;
  margin-bottom: 8px;
  background-color: #ffffff;
}
.unicorn-card-title {
  padding: 20rpx;
}
.unicorn-card-context {
  padding: 20rpx;
  padding-top: 0px;
}
.unicorn-font-size {
  font-size: 35rpx;
  font-weight: 700;
}
.unicorn-margin-top-common {
  margin-top: 8px;
}
.unicorn-card-title-icon {
  width: 12px;
  height: 12px;
  margin-right: 5px;
}
.unicorn-bg-gradual-caizhu {
  background-image: linear-gradient(45deg, #fe3443, #ff376f);
  color: #ffffff;
}
.nav .unicorn-tab-height {
  height: 70rpx;
  line-height: 70rpx;
}
.unicorn-tab-height {
  height: 70rpx;
  line-height: 70rpx;
}
.unicorn-tab-parent-height {
  height: 77rpx;
  line-height: 77rpx;
}
.purchase-list {
  height: 100%;
  overflow: hidden;
}
.purchase-list .purchase-body {
  height: calc(100% - 88rpx);
  overflow: auto;
}
.lineX {
  height: 10rpx;
}
.jiaji {
  position: absolute;
  padding-top: 0;
  right: 0px;
  width: 60px;
  height: 45px;
  z-index: 10;
}
.jiaji-btn {
  position: absolute;
  padding-top: 0;
  right: 0px;
  z-index: 10;
  margin-top: 208rpx;
  margin-right: 20rpx;
}
.my-unit {
  margin: 20rpx 0;
  font-size: 28rpx;
  transform: all 1s;
}
.my-unit .unit-head {
  z-index: 5;
  padding: 20rpx;
  height: 110rpx;
  box-sizing: border-box;
  flex-wrap: wrap;
}
.my-unit .unit-head text {
  width: 50%;
  font-size: 28rpx;
  line-height: 55rpx;
}
.my-unit .unit-head view {
  padding-bottom: 10rpx;
}
.my-unit .unit-head .main-title-value {
  font-size: 30rpx;
  font-weight: 700;
}
.my-unit .unit-body {
  z-index: 5;
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.my-unit .unit-body text {
  width: 50%;
  font-size: 28rpx;
  line-height: 55rpx;
  color: #999999;
}
.my-unit .unit-foot1 {
  z-index: 5;
  height: 88rpx;
  padding: 0 20rpx;
  border-top: 2rpx solid #f5f5f5;
  border-bottom: none;
  line-height: 88rpx;
}
.my-unit .unit-foot1 .btn {
  height: 60rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  margin: 14rpx 0;
  width: 100%;
}
.my-unit .unit-foot2 {
  z-index: 5;
  background-color: #E7E4E4;
  height: 10rpx;
  padding: 0 20rpx;
  border-top: 2rpx solid #f5f5f5;
  border-bottom: none;
  line-height: 88rpx;
}
.mt-tab0 {
  margin-bottom: 38rpx;
